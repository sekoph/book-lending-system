<div id="<%= dom_id book %>" class="card shadow-sm mx-auto" style="max-width: 25rem;">
  <div class="card-body">
    <h5 class="card-title text-dark font-weight-bold">Title: <%= book.title %></h5>
    <p class="card-text text-muted font-italic"><strong>By:</strong> <%= book.author %></p>
    <p class="card-text text-muted"><strong>ISBN:</strong> <%= book.isbn %></p>
    
    <div class="mt-3">
      <% if book.available %>
        <%= button_to "Borrow", borrows_path(book_id: book.id), method: :post, class: "btn btn-primary" %>
      <% else %>
        <p class="text-danger"><strong>Not Available</strong></p>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Go Back", books_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>

