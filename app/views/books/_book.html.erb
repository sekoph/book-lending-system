<p id="notice"><%= notice %></p>
<div class="container mx-auto px-4 py-16">
    <div class="flex justify-between items-center">
        <h1 class="text-4xl font-bold">Borrowed Books</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Book</th>
                <th scope="col">ISBN</th>
                <th scope="col">Borrow</th>
            </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
                <th scope="row">1</th>
                <td>
                    <div class="container">
                        <div class="col">
                            <div class="row font-weight-bold">
                                <%= book.title %>
                            </div>
                            <div class="row text-sm text-gray-500 font-italic">
                                Author:&nbsp<%= book.author %>
                            </div>
                        </div>
                    </div>
                </td>
                <td><%= book.isbn %></td>
                <td>
                    <% if book.available %>
                    <%= button_to "Borrow", borrows_path(book_id: book.id), method: :post, class: "btn btn-primary" %>
                    <% else %>
                    <p><strong>Not Available.</strong></p>
                    <% end %>
                </td>
                <td>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

