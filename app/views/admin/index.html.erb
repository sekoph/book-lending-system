<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<div class="container mx-auto px-4 py-16" id="books">
    <div class="flex justify-between items-center">
        <h1 class="text-4xl font-bold">Books Catalog</h1>
    </div>
    <% if @books.present? %>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Book</th>
                <th scope="col">ISBN</th>
                <th scope="col">Show More</th>
            </tr>
        </thead>
        <tbody>
          <% @books.each_with_index do |book, index| %>
            <tr>
                <th scope="row"><%= (@books.current_page - 1) * @books.limit_value + index + 1 %></th>
                <td>
                    <div class="container">
                        <div class="col">
                            <div class="row font-weight-bold">
                                <%= book.title %>
                            </div>
                            <div class="row text-sm text-gray-500 font-italic">
                                Author:&nbsp<%= book.author %>
                            </div>
                        </div>
                    </div>
                </td>
                <td><%= book.isbn %></td>
                <td>
                    <%= link_to "Show this book", admin_path(book.id), class: "btn btn-primary" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
     <!-- Pagination Links -->
      <div class="pagination mt-4 gap-2">
        <%= paginate @books %>
      </div>
    <% else %>
    <p class="text-center my-10">No books found.</p>
    <% end %>
</div>
